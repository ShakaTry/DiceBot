{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/slack/events",
      "dest": "/api/slack_events.py"
    },
    {
      "src": "/slack/commands",
      "dest": "/api/slack_commands.py"
    },
    {
      "src": "/slack/interactive",
      "dest": "/api/slack_interactive.py"
    }
  ],
  "env": {
    "GITHUB_TOKEN": "@github_token",
    "SLACK_BOT_TOKEN": "@slack_bot_token", 
    "SLACK_SIGNING_SECRET": "@slack_signing_secret",
    "GITHUB_OWNER": "ShakaTry",
    "GITHUB_REPO": "DiceBot"
  }
}
